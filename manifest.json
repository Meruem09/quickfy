{
  "name": "Quickfy",
  "description": "verify the legitimacy of any article/text using Quickfy. Select the text and verify.",
  "version": "1.0",
  "permission":["storage","acriveTabs","scripting"],
  "host_permission":["<all_urls>"],
  "background":{
    "service_worker":"background.js"
  },
  "manifest_version": 3,
  "action": {
    "default_title": "Quickfy"
  },
  "content_scripts":[
    {
      "matches":["<all_urls>"],
      "content":["content.js"],
      "css":["style.css"]
    }
  ]
}
