{
  "name": "Quickfy",
  "description": "verify the legitimacy of any article/text using Quickfy. Select the text and verify.",
  "version": "1.0",
  "permissions":["storage","activeTab","scripting","sidePanel"],
  "host_permissions":["<all_urls>"],
  "background":{
    "service_worker":"background.js"
  },
  "manifest_version": 3,
  "action": {
    "default_title": "Quickfy",
    "default_popup": "quickfy.html",
    "default_icon": "quickfy_extensions.png"
  },
  "content_scripts":[
    {
      "matches":["<all_urls>"],
      "js":["content.js"],
      "css":["style.css"]
    }
  ]
}
